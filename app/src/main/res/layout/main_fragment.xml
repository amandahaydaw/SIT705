<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#EEEEEE"
    tools:context="com.example.fuelsmartapp.main.MainFragment">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="355dp"
        android:layout_height="28dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/bar"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/cornorimag"
        android:layout_width="235dp"
        android:layout_height="173dp"
        android:layout_marginStart="-32dp"
        android:layout_marginTop="-57dp"
        android:contentDescription="TODO"
        android:src="@drawable/cornorimag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="229dp"
        android:layout_height="56dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:text="Smart Fuel"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homepageimg"
        android:layout_width="248dp"
        android:layout_height="205dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="88dp"
        android:src="@drawable/homepageimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ManageFuelText"
        android:layout_width="207dp"
        android:layout_height="21dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="sans-serif"
        android:text="Manage your fuel effectively!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="212dp"
        android:layout_height="103dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="115dp"
        android:fontFamily="sans-serif"
        android:text="Smart Fuel is all about fuel management. Here youâ€™ll able to find your cheapest petrol and monitor fuel budget."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getstarted"
        android:layout_width="364dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/black"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="open_registration"/>


</androidx.constraintlayout.widget.ConstraintLayout>